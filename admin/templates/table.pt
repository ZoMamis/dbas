<tal:block metal:use-macro="layout" i18n:domain="admin" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">
		<div class="container colored-container" tal:condition="not:table.is_existing">
            <h4 class="center">Table does not exists or contains errors!</h4>
        </div>

		<div class="container" tal:condition="table.has_error">
            <div class="col-md-offset-3 col-md-6">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="panel-title">Caution!</h3>
                    </div>
                    <div class="panel-body" i18n:translate="admin_caution_message">${table.error}</div>
                </div>
            </div>
        </div>
		
		<div class="container colored-container" tal:condition="table.is_existing">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li>
                            <a href="${request.application_url}/admin/" data-toggle="tooltip" data-placement="right">
                                <span i18n:translate="Admin" class="lead" style="color: #2196f3">Admin</span>
                            </a>
                        </li>
                        <li class="active">
                            <span class="lead"><span id="table_name">${table.name}</span> has ${table.count} Elements</span>
                        </li>
                    </ul>
                </div>
            </div>
            <br>
            <table id="data" class="table table-striped table-hover" tal:condition="table.has_elements">
                <thead>
                    <tr>
                        <th tal:repeat="head table.head">${head}</th>
                        <th>modify</th>
                    </tr>
                </thead>
                <tbody>
                    <tr tal:repeat="row table.row">
                        <td tal:repeat="el row"><span>${structure:el}</span></td>
                        <td>
                            <a href="#" title="edit"><i class="fa pencil fa-pencil-square-o" aria-hidden="true"></i></a>
                            <a href="#" title="delete"><i class="fa trash fa-trash-o" aria-hidden="true"></i></a>
                            <a href="#" title="save" style="pointer-events: none"><i class="fa floppy fa-floppy-o text-muted" aria-hidden="true"></i></a>
                            <a href="#" title="cancel" style="pointer-events: none"><i class="fa square fa-square-o text-muted" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
		</div>

        <span tal:condition="table.is_existing" class="icon-badge blue-button bottom-right add" id="icon-add-news" title="Create">+</span>

		<script type="text/javascript" src="${request.static_url('dbas:static/js/discussion/helper.js')}"></script>
		<script type="text/javascript" src="${request.static_url('dbas:static/js/discussion/guihandler.js')}"></script>
		<script type="text/javascript" src="${request.static_url('admin:static/js/admin.js')}"></script>
		<script type="text/javascript" src="${request.static_url('admin:static/js/ajaxhandler.js')}"></script>

	</tal:block>
</tal:block>