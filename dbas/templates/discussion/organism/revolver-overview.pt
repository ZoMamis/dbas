<tal:block i18n:domain="dbas" metal:define-macro="layout">
    <style>
        .vert .carousel-item-next.carousel-item-left,
        .vert .carousel-item-prev.carousel-item-right {
            -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
        }

        .vert .carousel-item-next,
        .vert .active.carousel-item-right {
            -webkit-transform: translate3d(0, 100%, 0);
            transform: translate3d(0, 100%, 0);
        }

        .vert .carousel-item-prev,
        .vert .active.carousel-item-left {
            -webkit-transform: translate3d(0, -100%, 0);
            transform: translate3d(0, -100%, 0);
        }

        .vert.carousel {
            margin-top: 19px;
            margin-bottom: 25px;
        }

        .carousel-control-next, .carousel-control-prev {
            width: 100%;
            height: 15%;
        }

        .carousel-control-next {
            bottom: -20px;
            top: auto;
        }

        .carousel-control-prev {
            top: -15px;
            bottom: auto;
        }

        .carousel-indicators {
            display: flex;
            flex-direction: column;
            left: auto;
            border-top-width: 3px;
            border-bottom-width: 3px;
            margin-right: 0;
            width: 35px;
        }

        .carousel-indicators li {
            transition: width .3s ease;
        }

        .carousel-indicators li.active {
            width: 35px;
        }
    </style>

    <div class="mt-4">
        <div class="row d-flex align-items-center">
            <div id="myCarousel" class="carousel slide col-6 vert pl-0 center" data-interval="false" data-ride="false">
                <div class="carousel-inner">
                    <div tal:repeat="position positionslist"
                            class="carousel-item ${'active' if repeat.position.start else ''}">
                        <div class="d-block w-100 pt-3">
                            <div class="card-body pl-0">
                                <blockquote class="blockquote">
                                    <div class="center" id="carousel-position-center">
                                        <p>
                                                ${position.content.capitalize()}
                                        </p>
                                    </div>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>

                <ol class="carousel-indicators mb-0" style="top: 0; bottom: auto;">
                    <li tal:repeat="position positionslist" data-target="#myCarousel"
                                                            data-slide-to="${repeat.position.index}"
                                                            data-value="${position.statement_uid}"
                                                            class="bg-dark ${'active' if repeat.position.start else ''}"></li>
                </ol>


                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <i class="fa fa-chevron-up text-secondary" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>


                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <i class="fa fa-chevron-down text-secondary" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="text-center">
            <a i18n:translate="LikeToTalkAbout" href="#" id="LikeToTalkAbout" class="btn btn-primary btn active"
                                                role="button" aria-pressed="true">
                I would like to talk about that!
            </a>
            <input id="item_login" class="btn btn-primary" type="button" name="discussion-button-group" data-url="login"
                   value="${item.premises[0].title}"
                   data-value="${add_or_login}"
                     tal:define="add_or_login [item.url for item in items.elements if item.url in ['login', 'add']][0]"
                     tal:condition="add_or_login">
        </div>
    </div>


    <script>
        $(document).ready(function () {
            var actives_div = $('#myCarousel .carousel-indicators li.active');
            var statement_uid = actives_div.data('value');
            $("#LikeToTalkAbout").attr("href", "/discuss/${issues.slug}/attitude/" + statement_uid)

            $('#myCarousel').on('slid.bs.carousel', function () {
                var actives_div = $('#myCarousel .carousel-indicators li.active');
                var statement_uid = actives_div.data('value');
                $("#LikeToTalkAbout").attr("href", "/discuss/${issues.slug}/attitude/" + statement_uid)
            });
            $('#item_login').click(function () {
                var mode = $(this).data('value');
                if (mode === 'login') {
                    $('#' + popupLogin).modal('show');
                } else if (mode === 'add') {
                    $('#' + addStatementContainerId).show();
                }
            });
        });
    </script>
</tal:block>
