<tal:block i18n:domain="dbas" metal:define-macro="layout">
    <div class="container">
        <div class="row">
            <blockquote class="blockquote text-center col-lg">
                <p>${db_statement.get_text().capitalize()}</p>
            </blockquote>
        </div>

        <div class="row">
            <div id="myCarousel" class="carousel slide col-6 center" data-ride="carousel">
                <div class="carousel-inner">
                    <div tal:repeat="argument arglist"
                            class="carousel-item ${'active' if repeat.argument.start else ''}">
                        <div>
                            <blockquote class="blockquote text-center col-lg">
                                <p i18n:translate="position_reason">
                                    is <b>${'' if argument.isSupportive else 'not'}</b> a good idea because
                                </p>
                            </blockquote>
                        </div>
                        <div class="d-block w-100 pt-3">
                            <div class="card-body pl-0">
                                <blockquote class="blockquote">
                                    <div class="center" id="carousel-position-center">
                                        <p>
                                                ${argument.text}
                                        </p>
                                    </div>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>


                <ol class="carousel-indicators mb-0" style="bottom: auto;">
                    <li tal:repeat="argument arglist" data-target="#myCarousel"
                                                      data-slide-to="${repeat.argument.index}"
                                                      data-value="${argument.url}"
                                                      class="bg-${'success' if argument.isSupportive else 'danger'}
                                                                ${'active' if repeat.argument.start else ''}"></li>
                </ol>

            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="fa fa-chevron-left text-secondary" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="fa fa-chevron-right text-secondary" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>

    </div>
    <div class="text-center">
        <a href="#" id="LikeToTalkAbout">
            I would like to talk about that!
        </a>
    </div>

    <script>
        $(document).ready(function () {
            var actives_div = $('#myCarousel .carousel-indicators li.active');
            var url = actives_div.data('value');
            $("#LikeToTalkAbout").attr("href", "http://localhost:4284/discuss" + url)
        });

        $(document).ready(function () {
            $('#myCarousel').on('slid.bs.carousel', function () {
                var actives_div = $('#myCarousel .carousel-indicators li.active');
                var url = actives_div.data('value');
                $("#LikeToTalkAbout").attr("href", "http://localhost:4284/discuss" + url)
            });
        });
    </script>
</tal:block>
