<!-- sidebar of the disussion -->
<tal:block i18n:domain="dbas" metal:define-macro="layout">

  <ul id="dialog-sidebar" class="sidebar center">
    <li id="restart-link" tal:condition="extras.ongoing_discussion" class="text-muted">
      <a id="discussion-restart-btn" class="text-muted" href="/discuss/${extras.restart_url}">
        <i class="fa fa-repeat" aria-hidden="true"></i>
        <span i18n:translate="restart_discussion">Restart discussion</span>
      </a>
    </li>
    <li id="share-url" class="text-muted">
      <i class="fa fa-share-alt" aria-hidden="true"></i>
      <span class="sidebar-element" i18n:translate="share_url">Share URL</span>
    </li>
    <li id="opinion-barometer-img" tal:condition="extras.show_bar_icon" class="text-muted">
      <i class="fa fa-bar-chart" aria-hidden="true"></i>
      <span class="sidebar-element" i18n:translate="Barometer">Opinion barometer</span>
    </li>
    <li id="display-style-icon-graph-img" tal:condition="extras.show_graph_icon" class="text-muted">
      <i class="fa fa-sitemap" aria-hidden="true"></i>
      <span class="sidebar-element" i18n:translate="graph_view">Graph view</span>
    </li>
    <li id="sidebar-search-statement" class="text-muted">
      <i class="fa fa-search" aria-hidden="true"></i>
      <span class="sidebar-element" i18n:translate="search">Search for statements</span>
    </li>
    <li id="sidebar-ask-a-friend" tal:condition="extras.logged_in" class="text-muted">
      <i class="fa fa-users" aria-hidden="true"></i>
      <span class="sidebar-element" i18n:translate="ask_friend">Ask a friend</span>
    </li>
    <li id="finish-button" onclick="window.location='/discuss/exit'" tal:condition="extras.logged_in" class="text-muted">
      <i class="fa fa-sign-out" aria-hidden="true"></i>
      <span class="sidebar-element" i18n:translate="exit_discussion">Leave the discussion</span>
    </li>
  </ul>
</tal:block>