<tal:block i18n:domain="dbas" metal:define-macro="layout">
  <meta name="title" content="Dialog-Based Online Argumentation">
  <meta name="description"
        content="This is our Dialog-Based Argumentation System. It offers a clear discussion structure, a modern web interface, a decentralized moderation system and is easy to use for everyone!">
  <meta name="keywords" content="dialog based discussion, online participation, tool, online argumentation, argument">
  <meta name="robots" content="index, follow">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="language" content="English">
  <meta name="author" content="Tobias Krauthoff">

  <meta name="google-site-verification" content="u3fQwV9ImqboTAEyPUoNlS7LNF0gAGaIb67qg-aD9JY"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="apple-touch-icon" sizes="180x180"
        href="${request.static_path('dbas:static/images/icons/favicons/apple-touch-icon.png')}">
  <link rel="icon" type="image/png" sizes="32x32"
        href="${request.static_path('dbas:static/images/icons/favicons/favicon-32x32.png')}">
  <link rel="icon" type="image/png" sizes="16x16"
        href="${request.static_path('dbas:static/images/icons/favicons/favicon-16x16.png')}">
  <link rel="manifest" href="${request.static_path('dbas:static/images/icons/favicons/site.webmanifest')}">
  <link rel="mask-icon" href="${request.static_path('dbas:static/images/icons/favicons/safari-pinned-tab.svg')}"
        color="#006abf">
  <meta name="msapplication-TileColor" content="#ffffff">
  <meta name="theme-color" content="#ffffff">


  <title>${title}</title>

  <link type="text/css"
        href="${request.static_path('dbas:static/node_modules/bootstrap-slider/dist/css/bootstrap-slider.min.css')}"
        rel="stylesheet">
  <link type="text/css"
        href="${request.static_path('dbas:static/node_modules/bootstrap-tourist/bootstrap-tourist.css')}"
        rel="stylesheet">
  <link type="text/css" href="${request.static_path('dbas:static/node_modules/font-awesome/css/font-awesome.min.css')}"
        rel="stylesheet">
  <script src="${request.static_path('dbas:static/node_modules/jquery/dist/jquery.min.js')}"></script>
</tal:block>