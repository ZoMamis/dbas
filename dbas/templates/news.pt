<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

		<head>
			<link type="text/css" href="${request.static_url('dbas:static/css/theme_form.css')}" rel="stylesheet">
			<link type="text/css" href="${request.static_url('dbas:static/css/theme_news.css')}" rel="stylesheet">
		</head>

		<div id="news-body"></div>

		<div id="news-navigation-container" class="container">
			<div class="row">
				<div class="col-md-12 text-center">

					<nav id="news-navigation">
						<ul class="pagination">
							<li class="disabled">
								<a href="#">
									<span aria-hidden="true">&laquo;</span>
								</a>
							</li>
							<li class="active"><a href="#">1</a></li>
							<li><a href="#">2</a></li>
							<li>
								<a href="#">
									<span aria-hidden="true">&raquo;</span>
								</a>
							</li>
						</ul>
					</nav>

				</div>
			</div>
		</div>

        <div style="position: relative; bottom: 8em; right: 1em; float:right" tal:condition="is_author">
            <button class="icon-badge add-button" id="icon-add-news">+</button>
        </div>

		<script type="text/javascript" src="${request.static_url('dbas:static/js/news.js')}"></script>

	</tal:block>
</tal:block>
