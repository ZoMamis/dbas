<!DOCTYPE html>
<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

		<head>
			<link type="text/css" href="${request.static_url('dbas:static/css/theme_form.css')}" rel="stylesheet">
			<link type="text/css" href="${request.static_url('dbas:static/css/theme_news.css')}" rel="stylesheet">

			<style>

			</style>
		</head>

		<div class="container firstcontainer colored_container" tal:condition="is_author">
			<div class="row">
				<div class="col-md-12">
					<div id="writing-news-failed" class="alert alert-danger" role="alert">
						<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
						<span class="sr-only" i18n:translate="error:">Error:</span> <span id="writing-news-failed-message"></span>
					</div>

					<div id="writing-news-success" class="alert alert-success" role="alert">
						<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
						<span class="sr-only" i18n:translate="success:">Success:</span> <span id="writing-news-success-message"></span>
					</div>
                </div>
            </div>
			<div class="row">
				<div class="col-md-10">
                    <h5 i18n:translate="writing_message">Writing a new message</h5>
					<input id="writing-news-title" name="newstitle" type="text" class="form-control news-title" placeholder="Today is a wonderful day!" autocomplete="on" placeholder="..." tabindex="1">
					<textarea id="writing-news-text" type="text" class="form-control news-text" name="newstext" autocomplete="on" placeholder="Today is a wonderful day, because the sun is shining, the birds are singing..." tabindex="2"></textarea>
                </div>
				<div class="col-md-2">
					<div id="news_credentials">
						<h6>
                            <span i18n:translate="author">Author</span>:
                            <span tal:replace="extras.nickname"></span>,
                            <span i18n:translate="date">Date</span>:
                            <span tal:replace="date"></span>
                        </h6>
                        <br>
                        <input id="send-news" type="button" value="Send News" class="button button-block btn btn-primary" data-dismiss="modal" />
					</div>
				</div>
			</div>
		</div>

		<div id="news-body"></div>

		<div id="news-navigation-container" class="container">
			<div class="row">
				<div class="col-md-12 text-center">

					<nav id="news-navigation">
						<ul class="pagination">
							<li class="disabled">
								<a href="#">
									<span aria-hidden="true">&laquo;</span>
								</a>
							</li>
							<li class="active"><a href="#">1</a></li>
							<li><a href="#">2</a></li>
							<li>
								<a href="#">
									<span aria-hidden="true">&raquo;</span>
								</a>
							</li>
						</ul>
					</nav>

				</div>
			</div>
		</div>

		<script type="text/javascript" src="${request.static_url('dbas:static/js/news.js')}"></script>

	</tal:block>
</tal:block>
