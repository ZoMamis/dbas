<!DOCTYPE html>
<html lang="${request.locale_name}" metal:use-macro="load: basetemplate.pt">

<head>
	<link type="text/css" href="${request.static_url('dbas:static/css/theme_login.css')}" rel="stylesheet">
	<link type="text/css" href="${request.static_url('dbas:static/css/login.css')}" rel="stylesheet">
</head>

<body>

	<div class="login form">
		<ul class="tab-group">
			<li class="tab active"><a href="#signup">Sign Up</a>
			</li>
			<li class="tab"><a href="#login">Log In</a>
			</li>
		</ul>
		<div class="tab-content">
			<div id="signup">
				<h2>Sign Up for Free</h2>
				<form action="/login" method="post">

					<div class="top-row">
						<div class="field-wrap">
							<h3>Your First Name<span class="req">*</span></h3>
							<input type="text" class="userfirstname active" required autocomplete="off" value="example : Tobias" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : Tobias';}">
						</div>

						<div class="field-wrap">
							<h3>Your Last Name<span class="req">*</span></h3>
							<input type="text" class="userlastname" required autocomplete="off" value="example : Krauthoff" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : Krauthoff';}">
						</div>
					</div>

					<div class="field-wrap">
						<h3>Your Email Address<span class="req">*</span></h3>
						<input type="text" class="email" required autocomplete="off" value="example : krauthoff@cs.uni-duesseldorf.de" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : krauthoff@cs.uni-duesseldorf.de';}">
					</div>

					<div class="field-wrap">
						<h3>Your Password<span class="req">*</span></h3>
						<input type="text" class="password" required autocomplete="off" value="example : ******" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : ******';}">
					</div>

					<div class="field-wrap">
						<h3>Your Password (Confirm)<span class="req">*</span></h3>
						<input type="text" class="passwordconfirm" required autocomplete="off" value="example : ******" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : ******';}">
					</div>
					<p class="required">* required field</p>

					<button type="submit" class="button button-block">Get Started</button>

				</form>
			</div>

			<div id="login">
				<h2>Welcome Back!</h2>
				<form action="/login" method="post">
					<div class="field-wrap">
						<h3>Your Email Address</h3>
						<input type="text" class="email" required autocomplete="off" value="example : krauthoff@cs.uni-duesseldorf.de" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : krauthoff@cs.uni-duesseldorf.de';}">
					</div>

					<div class="field-wrap">
						<h3>Your Password</h3>
						<input type="text" class="password" required autocomplete="off" value="example : ******" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'example : ******';}">
					</div>

					<p class="forgot"><a href="#">Forgot Password?</a>
					</p>
					<button class="button button-block">Log In</button>
				</form>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="${request.static_url('dbas:static/js/login.js')}"></script>

</body>
<html>