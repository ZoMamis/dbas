<!DOCTYPE html>
<html lang="${request.locale_name}" metal:use-macro="load: basetemplate.pt">

<head>
	<link type="text/css" href="${request.static_url('dbas:static/css/theme_login.css')}" rel="stylesheet">
	<link type="text/css" href="${request.static_url('dbas:static/css/login.css')}" rel="stylesheet">
</head>

<body>

	<div class="login form">
		<ul class="tab-group">
			<li class="tab active"><a href="#login">Log In</a>
			</li>
			<li class="tab"><a href="#signup">Sign Up</a>
			</li>
		</ul>
		<div class="tab-content">

			<div id="login">
				<h2>Welcome Back!</h2>
				<form action="/login" method="post">
					<div class="field-wrap">
						<h3>Your Email Address</h3>
						<input type="email" class="email" required autocomplete="off" placeholder="example: krauthoff@cs.uni-duesseldorf.de">
					</div>

					<div class="field-wrap">
						<h3>Your Password</h3>
						<input type="password" class="password" required autocomplete="off" placeholder="example: ******">
					</div>
					
					<p data-toggle="modal" data-target="#popup_password"><a>Forgot Password?</a>
					</p>
					
					<button type="button" class="button button-block btn-lg btn btn-primary" data-dismiss="modal">Log In</button>
				</form>
			</div>
			
			
			<div id="signup">
				<h2>Sign Up for Free</h2>
				<form action="/login" method="post">
					<div class="top-row">
						<div class="field-wrap">
							<h3>Your First Name (required)</h3>
							<input type="text" class="userfirstname active" required autocomplete="on" placeholder="example: Tobias">
						</div>

						<div class="field-wrap">
							<h3>Your Last Name (required)</h3>
							<input type="text" class="userlastname" required autocomplete="on" placeholder="example: Krauthoff">
						</div>
					</div>

					<div class="field-wrap">
						<h3>Your Email Address (required)</h3>
						<input type="email" class="email" required autocomplete="on" placeholder="example: krauthoff@cs.uni-duesseldorf.de">
					</div>

					<div class="field-wrap">
						<h3>Your Password (required)</h3>
						<input type="password" class="password" required autocomplete="off" placeholder="example: ******">
					</div>

					<div class="field-wrap">
						<h3>Your Password (confirm, required)</h3>
						<input type="password" class="passwordconfirm" required autocomplete="off" placeholder="example: ******">
					</div>

					<button id="submit-register" type="submit" class="button button-block btn-lg btn btn-primary">Register</button>

				</form>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="${request.static_url('dbas:static/js/login.js')}"></script>

</body>
<html>