<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

		<div class="form container first-container colored-container">
			<h3 i18n:translate="contact_header_1" class="text-center">Get In Touch With Us</h3>
			<p i18n:translate="contact_header_2" class="text-center">Feel free to drop us a line and we’ll try to get back to you in 48 hours max!</p>
			<br>
			<form action="/contact" method="post" class="form-horizontal">
                <input type="hidden" name="csrf_token" value="${request.session.get_csrf_token()}">

				<div class="form-group">
					<label class="col-sm-3 control-label" for="name-input" i18n:translate="name_req">Your Name (required)</label>
					<div class="col-sm-9">
						<input type="text" id="name-input" class="name active form-control" name="name" placeholder="example: Tobias Krauthoff" tabindex="1" autofocus autocomplete="on" value="${name}">
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label" for="email-input" i18n:translate="mail_req">Your E-Mail (required)</label>
					<div class="col-sm-9">
						<input type="email" id="email-input" class="email form-control" name="mail" placeholder="example: krauthoff@cs.uni-duesseldorf.de" tabindex="2" autocomplete="on" value="${mail}">
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label" for="phone-input" i18n:translate="phone_no">Your Phone Number</label>
					<div class="col-sm-9">
						<input type="tel" id="phone-input" class="tel form-control" name="phone" autocomplete="on" placeholder="example: +49 (0)211 81-13461" tabindex="3" value="${phone}">
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label" for="msg-input" i18n:translate="message_req">Your Notification (required)</label>
					<div class="col-sm-9">
						<textarea type="text" id="msg-input" class="content form-control" name="content" autocomplete="on" placeholder="example: I’d like to say good job!" tabindex="4" value="${name}"><span tal:replace="content"/></textarea>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label" for="spam-input" i18n:translate="spam_req">Anti-Spam (required)</label>
					<div class="col-sm-9">
						<input type="text" id="spam-input" class="spam form-control" name="spam" autocomplete="off" placeholder="${spamquestion}" tabindex="5" value="${spamanswer}">
					</div>
				</div>

				<!--
			    <div id="alert-message" class="alert alert-danger alert-error">
				    <a href="" class="close" data-dismiss="alert">&times;</a>
				    <strong>Error!</strong> A problem has been occurred with your anti-spam message.
			    </div>
			    -->

				<div tal:condition="contact_error" id="warning-message" class="alert alert-warning alert-dismissible">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<strong i18n:translate="warning">Warning!</strong>
					<div id="warning-message-text"><span tal:replace="message" /></div>
				</div>


				<div tal:condition="was_message_send" class="alert alert-success" role="alert">
					<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
					<span class="sr-only" i18n:translate="great">Great:</span> <span i18n:translate="message_sent">Your message was sent.</span>
				</div>

				<div class="text-center">
				    <input id="contact-submit" type="submit" name="form.contact.submitted" value="Submit Your message" class="button button-block btn-lg btn btn-primary" onclick="$('body').addClass('loading')" data-dismiss="modal" tal:attributes="value extras.buttons.contact_submit"/>
				</div>
			</form>
			<!--
<script type="text/javascript" src="${request.static_url('dbas:static/js/contact.js')}"></script>
-->
		</div>
		
	</tal:block>
</tal:block>