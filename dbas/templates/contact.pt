<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">
        <script src='https://www.google.com/recaptcha/api.js'></script>

		<div class="container">
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <div class="form">
			            <h3 i18n:translate="contact_header_1" class="text-center">Get In Touch With Us</h3>
			            <p i18n:translate="contact_header_2" class="text-center">Feel free to drop us a line and weâ€™ll try to get back to you in 48 hours max!</p>
			            <br>
			            <form action="/contact" method="post" class="form-horizontal">
                            <input type="hidden" name="csrf_token" value="${request.session.get_csrf_token()}">

                             <div class="form-group">
                                 <label class="col-sm-3 control-label" i18n:translate="name_req">Your Name (required)</label>
                                 <div class="col-sm-9 input-group">
                                     <div class="input-group-addon"><i class="fa fa-user fa-2x" aria-hidden="true"></i></div>
                                     <input type="text" class="form-control" name="name" id="name-input" tal:attributes="placeholder placeholder.name" placeholder="" value="${name}" required>
                                 </div>
                             </div>

            				<div class="form-group">
            					<label class="col-sm-3 control-label" i18n:translate="mail_req">Your E-Mail (required)</label>
            					<div class="col-sm-9 input-group">
                                    <div class="input-group-addon"><i class="fa fa-envelope fa-2x" aria-hidden="true"></i></div>
            						<input type="email" id="email-input" name="mail" class="form-control" tal:attributes="placeholder placeholder.mail" placeholder="" autocomplete="on" value="${mail}" required>
            					</div>
            				</div>

            				<div class="form-group">
            					<label class="col-sm-3 control-label" i18n:translate="phone_no">Your Phone Number</label>
            					<div class="col-sm-9 input-group">
                                    <div class="input-group-addon"><i class="fa fa-phone fa-2x" aria-hidden="true"></i></div>
            						<input type="tel" id="phone-input" name="phone" class="form-control" autocomplete="on" tal:attributes="placeholder placeholder.phone" placeholder="" value="${phone}">
            					</div>
            				</div>

            				<div class="form-group">
            					<label class="col-sm-3 control-label" i18n:translate="message_req">Your Notification (required)</label>
            					<div class="col-sm-9 input-group">
                                    <div class="input-group-addon"><i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i></div>
            						<textarea id="msg-input" name="content" class="form-control" autocomplete="on" tal:attributes="placeholder placeholder.message" placeholder=""><span tal:replace="content"/></textarea>
            					</div>
            				</div>

                            <div align="center"
                                 class="g-recaptcha"
                                 data-size="invisible"
                                 tal:attributes="data-sitekey extras.g_recaptcha_key"></div>

            				<!--
            			    <div id="alert-message" class="alert alert-danger alert-error">
            				    <a href="" class="close" data-dismiss="alert">&times;</a>
            				    <strong>Error!</strong> A problem has been occurred with your anti-spam message.
            			    </div>
            			    -->

            				<div tal:condition="contact_error" id="warning-message" class="alert alert-warning alert-dismissible col-md-offset2 col-md-8">
            					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
            						<span aria-hidden="true">&times;</span>
            					</button>
            					<strong i18n:translate="warning">Warning!</strong>
                                <div id="warning-message-text"><span tal:replace="message">..</span></div>
            				</div>


            				<div tal:condition="was_message_send" class="alert alert-success col-md-offset-2 col-md-8 col-md-offset-2" role="alert">
            					<i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            					<span class="sr-only" i18n:translate="great">Great:</span> <span i18n:translate="message_sent">Your message was sent.</span>
            				</div>

            				<div class="text-center">
            				    <input id="contact-submit" type="submit" name="form.contact.submitted" value="Submit Your message"
                                       class="button button-block btn-lg btn btn-primary" data-dismiss="modal" tal:attributes="value extras.buttons.contact_submit"/>
            				</div>
            			</form>
                    </div>
                </div>
            </div>
		</div>
		
	</tal:block>
</tal:block>