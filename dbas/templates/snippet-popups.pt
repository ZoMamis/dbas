<div class="modal fade" id="popup_privacy" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button name="popup_privacy_icon_close" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalLabel" i18n:translate="privacy_policy">Privacy Policy</h4>
			</div>
			<div class="modal-body">

				<style>
					#ppBody {
						font-size: 11pt;
						width: 100%;
						margin: 0 auto;
						text-align: justify;
					}
					
					.ppConsistencies {
