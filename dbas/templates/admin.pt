<!DOCTYPE html>
<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

		<head>
			<link type="text/css" href="${request.static_url('dbas:static/css/theme_basetemplate.css')}" rel="stylesheet">
			<link type="text/css" href="${request.static_url('dbas:static/css/theme_content.css')}" rel="stylesheet">
		</head>
		
		<div class="container colored_container" tal:condition="not:extras.is_admin" style="width: 578px;">
				<img class="center" src="${request.static_url('dbas:static/images/nopower.jpg')}">
		</div>

		<div class="container colored_container" tal:condition="extras.is_admin">
			<div class="row">
				<div class="col-md-2"></div>
				<div class="col-md-8">
					<h4><span class="lead" i18n:translate="participant_list">List of participants</span></h4>
					<p i18n:translate="admin_only">Some additional options for the administrator.</p>
					<div class="row">
                        <div class="col-md-12">
					        <input id="list-all-users" type="button" name="" value="Show all users" class="button button-block btn-xs btn btn-primary" data-dismiss="modal" tal:attributes="value extras.buttons.show_all_users"/>
                        </div>
                    </div>
                </div>
				<div class="col-md-2"></div>
				<div class="col-md-12">
					<div id="admins-space-users" class="center" style="display:none;">
                        <table style="border-collapse: separate; border-spacing: 0;" class="table table-condensed tablesorter" border="0">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th i18n:translate="firstname">Firstname</th>
                                <th i18n:translate="surname">Surname</th>
                                <th i18n:translate="nickname">Nickname</th>
                                <th i18n:translate="email">E-Mail</th>
                                <th i18n:translate="group_uid">Group</th>
                                <th i18n:translate="last_login">Last Login</th>
                                <th i18n:translate="registered">Registered</th>
                                <th i18n:translate="gender">Gender</th>
                                <th i18n:translate="avatar">Avatar</th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr tal:repeat="user users">
                                    <td>${user.uid}</td>
                                    <td>${user.firstname}</td>
                                    <td>${user.surname}</td>
                                    <td>${user.nickname}</td>
                                    <td>${user.email}</td>
                                    <td>${user.gender}</td>
                                    <td>${user.group_uid}</td>
                                    <td>${user.last_login}</td>
                                    <td>${user.registered}</td>
                                    <td><img style="height: 50%;" tal:attributes="src user.avatar" src="https://secure.gravatar.com/avatar/00000000000000000000000000000000?d=wavatar&s=80"></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
				</div>
			</div>
		</div>

		<div class="container colored_container" tal:condition="extras.is_admin">
			<div class="row">
				<div class="col-md-2"></div>
				<div class="col-md-8">
					<h4><span class="lead" i18n:translate="list_attacks">List of attacks, clicked by the participants</span></h4>
					<p i18n:translate="admin_only">Some additional options for the administrator.</p>
					<div class="row">
                        <div class="col-md-6">
                            <input id="list-all-arguments" type="button" name="" value="Show all arguments" class="button button-block btn-xs btn btn-primary" data-dismiss="modal" tal:attributes="value extras.buttons.show_all_arguments"/>
                        </div>
                        <div class="col-md-6" id="issue-switch-col" style="display: none;">
                            <div class="dropdown">
					    	    <button class="btn btn-primary dropdown-toggle btn-xs" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					    		    <span i18n:translate="switch_topc">Switch Topic</span>&#160;&#160;<span class="caret"></span>
					    	    </button>
					    	    <ul class="dropdown-menu" id="dropdown-issue-list" aria-labelledby="issue-dropdown" style="width: 250px;">
					    		    <li class="dropdown-header" i18n:translate="topics">Topics</li>
					    	    </ul>
                            </div>
					    </div>
                    </div>
				</div>
				<div class="col-md-2"></div>
				<div class="col-md-12">
					<div id="admins-space-argument"> </div>
				</div>
			</div>
		</div>

		<script type="text/javascript" src="${request.static_url('dbas:static/js/discussion-helper.js')}"></script>
		<script type="text/javascript" src="${request.static_url('dbas:static/js/discussion-guihandler.js')}"></script>
		<script type="text/javascript" src="${request.static_url('dbas:static/js/admin.js')}"></script>

	</tal:block>
</tal:block>