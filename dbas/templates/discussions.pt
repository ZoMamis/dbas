<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
    <tal:block metal:fill-slot="content_page">

        <section>
            <div class="text-center big-header">
                <h3 class="text-center"><i class="fa fa-address-card-o" aria-hidden="true"></i><span i18n:translate="overview_of_discussion" >Overview of the Discussions</span></h3>
                <p i18n:translate="page_contains_overview" class="lead text-center">This page contains an over of discussions you have created as well as other participants created</p>
            </div>
        </section>

        <div class="wrapper-container">

            <div class="container colored-container">
                <div class="row">
                    <div class="col-md-offset-1 col-md-10">
                        <h4 i18n:translate="my_discussions" class="text-center">My Discussions</h4>
                        <p i18n:translate="summary_your_discussions" class="lead text-center" tal:condition="len(issues.user)>0">This is a summary of the discussions you have created:</p>
                        <p i18n:translate="you_created_no_discussion" class="lead text-center" tal:condition="len(issues.user)<1">You had not creaty any discussion yet, but you can use the add button in the bottom left to create your own discussion.</p>

                        <table class="table table-striped table-hover" tal:condition="len(issues.user)>0">
                            <thead>
                            <tr>
                                <th i18n:translate="title">Titel</th>
                                <th i18n:translate="count_of_statements">Count of Statements</th>
                                <th i18n:translate="count_of_involved_users">Count of Involved User</th>
                                <th i18n:translate="date_of_creation">Date of Creation</th>
                                <th i18n:translate="enabled">Enabled</th>
                                <th i18n:translate="link">Link</th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr tal:repeat="issue issues.user" tal:attributes="data-uid issue.uid">
                                    <td>${issue.title}</td>
                                    <td>${issue.count_of_statements}</td>
                                    <td>${issue.involved_users}</td>
                                    <td>${issue.date}</td>
                                    <td><input class="discussion-enable-toggle" type="checkbox" data-toggle="toggle" data-size="small" title="" data-onstyle="success" data-offstyle="danger" tal:attributes="checked issue.is_enabled; data-uid issue.uid"></td>
                                    <td><a href="" tal:attributes="href issue.short_url; title issue.url">${issue.short_url}</a><i class="fa fa-clipboard" aria-hidden="true" style="margin-left: 0.5em; cursor: pointer;"></i></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

            <div class="container colored-container">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <h4 i18n:translate="more_discussions" class="text-center">More Discussions</h4>
                        <p i18n:translate="summary_discussion_other_users" class="lead text-center" tal:condition="len(issues.other)>0">This is a summary of discussions other participants have created:</p>
                        <p i18n:translate="other_users_not_discussion" class="lead text-center" tal:condition="len(issues.other)<1">Other users have not created any discussion yet.</p>

                        <table class="table table-striped table-hover" tal:condition="len(issues.other)>0">
                            <thead>
                            <tr>
                                <th i18n:translate="title">Titel</th>
                                <th i18n:translate="count_of_statements">Count of Statements</th>
                                <th i18n:translate="count_of_involved_users">Count of Involved User</th>
                                <th i18n:translate="date_of_creation">Date of Creation</th>
                                <th i18n:translate="enabled">Enabled</th>
                                <th i18n:translate="link">Link</th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr tal:repeat="issue issues.other" tal:attributes="data-uid issue.uid">
                                    <td>${issue.title}</td>
                                    <td>${issue.count_of_statements}</td>
                                    <td>${issue.involved_users}</td>
                                    <td>${issue.date}</td>
                                    <td tal:condition="not:issue.is_enabled"><i class="fa fa-check text-success" aria-hidden="true"></i></td>
                                    <td tal:condition="issue.is_enabled"><i class="fa fa-times text-danger" aria-hidden="true"></i></td>
                                    <td><a href="" tal:attributes="href issue.short_url; title issue.url">${issue.short_url}</a></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        <span class="icon-badge blue-button bottom-right" id="add-topic">+</span>

    </tal:block>
</tal:block>