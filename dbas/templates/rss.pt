<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

        <section>
            <div class="text-center big-header">
                <h3 class="text-center">RSS</h3>
                <p i18n:translate="stay_tuned_rss" class="lead text-center">Stay tuned and fetch the latest news and discussion contributions via RSS-feeds</p>
            </div>
        </section>

        <div class="wrapper-container">
		    <div class="container" tal:repeat="r rss">
			    <div class="row">
    				<div class="col-md-offset-2 col-md-8 colored-container">
                        <p class="lead"><a href="" tal:attributes="href r.link">${r.title}</a></p>
                        <p>${structure:r.description}</p>
    				</div>
			    </div>
		    </div>
        </div>

	</tal:block>
</tal:block>