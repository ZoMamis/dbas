<tal:block metal:use-macro="layout" i18n:domain="review" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

		<div class="container colored-container">
            <h4>Reputation count: ${reputation.count}</h4>
            <div class="row">
                <div class="col-md-12" id="reputation_table">
                    <table class="table table-condensed" border="0" id="review-table">
                    <thead>
                        <tr class="review-table-row">
                            <td i18n:translate="date" class="center">Date</td>
                            <td i18n:translate="action">Action</td>
                            <td i18n:translate="reputation" class="center">Reputation</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="review-table-row" tal:repeat="rep reputation.history">
                            <td class="rep_date center">${structure:rep.date}</td>
                            <td class="rep_action">${structure:rep.action}</td>
                            <td class="rep_points_data center">${structure:rep.points_data}</td>
                        </tr>
                    </tbody>
                </table>
                </div>
            </div>
		</div>

		<div class="container colored-container">
            <div class="row">
                <div id="reputation_absolute_graph_summary" class="col-md-6"></div>
                <div id="reputation_relative_graph_summary" class="col-md-6"></div>
            </div>
            <br>
            <div class="row">
                <div id="reputation_absolute_graph" class="col-md-6"></div>
                <div id="reputation_relative_graph" class="col-md-6"></div>
            </div>
        </div>

        <script type="text/javascript" src="${request.static_url('review:static/js/reputation.js')}"></script>
        <script type="text/javascript" src="${request.static_url('dbas:static/js/libs/chart.min.js')}"></script>
	</tal:block>
</tal:block>